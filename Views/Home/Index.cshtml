@model IEnumerable<MVCManukauTech.Models.DB.Categories>


@{
    ViewData["Title"] = "Home Page";
}

<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner" role="listbox" style="text-align:left">
        <div class="item active" style="text-align:left">
            <img src="~/images/Webp.net-resizeimage.jpg" alt="Camera" class="img-responsive" />
            <div class="carousel-caption" role="option" style="text-align:left;padding: 8px">
                <p style="font-size:0.8em">
                    @*Study at ManukauTech to learn how to build web apps with ASP.NET MVC Core<br />
                        Attribution: Image from a 3D model created as a student project by Steven McClintock <br />
                        <a class="btn btn-default" href="http://island.manukau.ac.nz/vmit3d">
                            Project "Virtual MIT" by Steven
                        </a>*@
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/Webp.net-resizeimage (1).jpg" alt="HeadPhones" class="img-responsive" />
            <div class="carousel-caption" role="option" style="text-align:left">
                <p>
                    @*The building represents the "Forest Of Learning" with colour themes for each floor. This is the 3rd floor carpet coloured Cyan to represent the transition from treetops to sky.*@

                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/Webp.net-resizeimage (3).jpg" alt="SpyCam" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    @*Side view of the "Virtual MIT" 3D model of our building.*@
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/Webp.net-resizeimage (2).jpg" alt="Speakers" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    @*Atrium from the "Virtual MIT" 3D Model.*@
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
    <h2 style="text-align: center;font-family:cursive;font-size:larger">NEW ZEALAND</h2>
</div>

<div class="row">

    <div class="col-md-12">
        <div class="row">
            @foreach (var m in Model)
            {

                <div class="col-md-4" style="text-align: center;    padding: 5px 5px 5px 5px;">
                    <a href="~/Products/EachProductDetails?id=@m.CategoryId&pageno=1">

                        <img class="a.photo" src="~/images/Products/@m.ImageFileName" style="width:250px; height:250px; cursor:pointer" />
                    </a>
                    <div class="row">
                        <h4><span id="CategoryName" style="color:darkred;font-size:larger;font-family:cursive">@m.CategoryName</span></h4>
                    </div>
                </div>

            }
        </div>

    </div>

</div>
