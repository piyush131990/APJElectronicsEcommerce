@model IEnumerable<MVCManukauTech.Models.DB.PremiumTypes>
@{
    ViewData["Title"] = "Premium";
}
<h2>@ViewData["Title"]</h2>
@Html.Raw(TempData["msg"])

<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000" >
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
    </ol>
    <div class="carousel-inner" role="listbox" style="text-align:left">
        <div class="item active" style="text-align:-webkit-center">
            <img src="~/images/SILVER-landscape.jpg" alt="Camera" class="img-responsive" />
            <div class="carousel-caption" role="option" style="text-align:left;padding: 8px">
                <p style="font-size:0.8em">
                    @*Study at ManukauTech to learn how to build web apps with ASP.NET MVC Core<br />
                        Attribution: Image from a 3D model created as a student project by Steven McClintock <br />
                        <a class="btn btn-default" href="http://island.manukau.ac.nz/vmit3d">
                            Project "Virtual MIT" by Steven
                        </a>*@
                </p>
            </div>
        </div>
        <div class="item" style="text-align:-webkit-center">
            <img src="~/images/gold-landscap.jpg" alt="SpyCam" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    @*Side view of the "Virtual MIT" 3D model of our building.*@
                </p>
            </div>
        </div>
        
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<br/>
<div class="panel panel-default">
    <div class="panel-heading"><h2>Choose your premium :</h2></div>
    <div class="panel-body">

        <form action="OrderDetails/PremiumCart" method="get">
            <div class="col-lg-12 col-sm-9 col-md-6">
                <table class="table" border="1">
                    <thead>
                        <tr>
                            <th>
                                Period
                            </th>
                            @foreach (var item in Model)
                            {
                                <th>
                                    
                                    <img src="~/images/@item.Image" style="width:10em" />
                                </th>

                            }

                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                1 Year
                            </td>
                            @{ var cnt = 0; }
                            @foreach (var item in Model)
                            {
                            <td>
                                @if (cnt == 0)
                                {
                                    <input type="radio" name="PremiumType" value="@item.PremiumTypeId" checked />

                                    cnt++;
                                }
                                else
                                {
                                    <input type="radio" name="PremiumType" value="@item.PremiumTypeId" />
                                }$@Html.DisplayFor(modelItem => item.Price)

                                @{ 
                                    if (item.PremiumTypeId == 2)
                                    {
                                    <label>
                                        (8% Discount on every purchase)</label>

                                        }
                                        if (item.PremiumTypeId == 1)
                                        {
                                    <label>
                                        (12% Discount on every purchase)
                                    </label>

                                        }
                                        }
</td>
                            }
                        </tr>
                        <tr>
                            <td></td>
                            <td></td>
                            <td><input class="btn btn-info btn-lg" style="margin-left:60px" type="submit" value="Deal" name="submit" /></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </form>
    </div>

</div>
