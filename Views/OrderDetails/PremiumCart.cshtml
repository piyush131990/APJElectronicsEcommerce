@model IEnumerable<MVCManukauTech.Models.DB.PremiumTypes>

@{
    ViewData["Title"] = "Order Membership Shopping";
    decimal GrandTotal = 0;
    int PremiumTypeId = 0;
}
<h2>@ViewData["Title"]</h2>
<div class="panel panel-default">
    <div class="panel-heading"><h2>Choose your premium :</h2></div>
    <div class="panel-body">
        <div class="col-lg-12 col-sm-9 col-md-6">
            <table class="table" border="1">
                <thead>
                    <tr>
                        <th>
                        </th>
                        <th>
                            Period
                        </th>
                        <th>
                            Premium Type
                        </th>
                        <th>
                            Amount
                        </th>
                        
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @{PremiumTypeId = item.PremiumTypeId;}
                                <img src="~/images/@item.Image" style="width:10em" />
                            </td>
                            <td>
                                1 Year
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PremiumType)
                            </td>
                            <td>
                                @{GrandTotal = GrandTotal + item.Price;}
                                $@Html.DisplayFor(modelItem => item.Price)
                            </td>
                        </tr>
                    }
                    <tr>
                        <td></td>
                        <td></td>
                        <td style="font-weight:bold; text-align:right">
                            Grand Total:
                        </td>
                        <td>
                            $@GrandTotal
                        </td>
                    </tr>
                    <tr>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td>
                            <a class="btn btn-info btn-lg" href="~/OrderDetails/PremiumCheckout?PremiumType=@PremiumTypeId" style="text-decoration:none">Purchase</a>
                        </td>
                    </tr>
                </tbody>
            </table>
            </div>
        </div>
    </div>